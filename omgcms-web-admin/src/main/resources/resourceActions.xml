<?xml version="1.0" encoding="UTF-8"?>
<!-- 定义配置系统资源级操作 -->

<resource-action-mapping>

    <!-- 用户模型资源及权限定义 -->
    <model-resource>

        <model-name>org.omgcms.core.model.User</model-name>

        <supports>
            <action-key>VIEW</action-key>
            <action-key>ADD_ENTRY</action-key>
            <action-key>UPDATE</action-key>
            <action-key>DELETE</action-key>
            <action-key>PERMISSIONS</action-key>
        </supports>

        <site-member-defaults>
            <action-key>VIEW</action-key>
        </site-member-defaults>

        <guest-defaults>
            <action-key>VIEW</action-key>
        </guest-defaults>

    </model-resource>


    <!-- 角色模型资源及权限定义 -->
    <model-resource>

        <model-name>org.omgcms.core.model.Role</model-name>

        <supports>
            <action-key>VIEW</action-key>
            <action-key>ADD_ENTRY</action-key>
            <action-key>UPDATE</action-key>
            <action-key>DELETE</action-key>
            <action-key>PERMISSIONS</action-key>
        </supports>

        <site-member-defaults>
            <action-key>VIEW</action-key>
        </site-member-defaults>

        <guest-defaults>
            <action-key>VIEW</action-key>
        </guest-defaults>

    </model-resource>


    <!-- 系统权限定义 -->
    <system-resource>
        <!-- 工作台 -->
        <resource-name>workspace</resource-name>
        <supports>
            <action-key>ACCESS</action-key>
            <action-key>PERMISSIONS</action-key>
        </supports>
        <sub-resource>
            <system-resource>
                <resource-name>workspace.index</resource-name>
                <supports>
                    <action-key>ACCESS</action-key>
                    <action-key>PERMISSIONS</action-key>
                </supports>
            </system-resource>
            <system-resource>
                <resource-name>workspace.systemInfo</resource-name>
                <supports>
                    <action-key>ACCESS</action-key>
                    <action-key>PERMISSIONS</action-key>
                </supports>
            </system-resource>
        </sub-resource>
    </system-resource>

    <system-resource>
        <!-- 内容管理 -->
        <resource-name>contentManagement</resource-name>
        <supports>
            <action-key>ACCESS</action-key>
            <action-key>PERMISSIONS</action-key>
        </supports>
        <sub-resource>
            <system-resource>
                <resource-name>contentManagement.article</resource-name>
                <supports>
                    <action-key>ACCESS</action-key>
                    <action-key>PERMISSIONS</action-key>
                </supports>
            </system-resource>
            <system-resource>
                <resource-name>contentManagement.template</resource-name>
                <supports>
                    <action-key>ACCESS</action-key>
                    <action-key>PERMISSIONS</action-key>
                </supports>
            </system-resource>
            <system-resource>
                <resource-name>contentManagement.structure</resource-name>
                <supports>
                    <action-key>ACCESS</action-key>
                    <action-key>PERMISSIONS</action-key>
                </supports>
            </system-resource>
        </sub-resource>

    </system-resource>

    <resource file="resource-actions/system.xml" />

</resource-action-mapping>